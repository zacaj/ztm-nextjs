generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tournament {
  id     BigInt   @id @default(autoincrement())
  name   String
  Player Player[]
}

model Player {
  id           BigInt     @id @default(autoincrement())
  tournament   Tournament @relation(fields: [tournamentId], references: [id])
  tournamentId BigInt
  name         String
  ifpa         String
}
